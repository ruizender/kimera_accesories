<div class="container">
  <h2 class="text-center mt-4">Inicia Sesion</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "Correo Electronico" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "correo" %>
    </div>
    <br />
    <div class="field">
      <%= f.label :password, "Recordar contraseña" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

      <% if flash[:notice] %>
                <p class="alert font-weight-bold text-danger"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:alert] %>
                <p class="alert font-weight-bold text-danger"><%= flash[:alert] %></p>
      <% end %>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Recordar contraseña" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Iniciar Sesion" %>
    </div>
      <%= link_to "Continua con Google", user_google_oauth2_omniauth_authorize_path,  class:'btn btn-outline-success mt-2 text-decoration-none' %>
      <%= link_to "Iniciar sesión como Administrador" , admin_root_path, class: "btn btn-outline-success mt-2 text-decoration-none" %>
    <br>
  <% end %>
<%= render "devise/shared/links" %>
</div>



