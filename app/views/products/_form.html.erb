<div class="container">

  <%= form_with(model: product, local: true) do |form| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :sku %>
      <%= form.text_field :sku %>
    </div>

    <div class="field">
      <%= form.label :descriptions %>
      <%= form.text_area :descriptions %>
    </div>

    <div class="field">
      <%= form.label :photo %>
      <%= form.text_field :photo %>
    </div>

    <div class="field">
      <%= form.label :stock %>
      <%= form.number_field :stock %>
    </div>

    <div class="field">
      <%= form.label :Price %>
      <%= form.number_field :price %>
    </div>

    <div class="field">
      <%= form.label :category_id %>
        <%= form.collection_select :category_id, @categories, :id, :name %> 
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>