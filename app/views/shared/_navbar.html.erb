<header id="header">
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <a class="navbar-brand cuadro" href="<%= root_path %>"> 
          <%= image_tag("logo_kimera.jpeg", class:'logo') %> 
        </a> 
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav ml-auto">
              <ul>
                <li><%= link_to 'Productos', products_path%><li>
                  <% if current_user %>
                <li><%= link_to 'Ordenes', orders_path%></li>
                <li class="nav-item">
                    <% if @order.present?  %>
                        <%= link_to (shopping_cart_path(@order)) do %>
                          <i class="fas fa-shopping-cart text-secundary fa-2x mx-2"></i>
                        <% end %>
                    <% end %>
                </li>
                <li>
                  <%# ---- aqui empieza el dropdown %>
                  <div class="dropdown ml-auto">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-expanded="false">
                      <%= current_user ? current_user.name : 'Ingresar'%>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                        <%= link_to 'Editar Perfil', edit_user_registration_path, class:'dropdown-item' %>
                        <%= link_to 'Salir', destroy_user_session_path, method: :delete, class:'dropdown-item' %>
                    </div>
                  </div>
                </li>
                  <% else  %>
                <li><%= link_to 'Registrate Aqui', new_user_registration_path, class:'btn btn-warning mx-2 nav-item' %></li>
                <li><%= link_to 'Inicia Sesion', new_user_session_path, class:'btn btn-light mx-2 nav-item'  %></li>
                  <% end %>
              </ul>
            </div>
          </div>
  </nav>
</header>