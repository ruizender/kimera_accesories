<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header bg-dark text-light">
    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
    <a href="<%= root_url%>" class="btn btn-outline-info btn-sm pull-right">Continue Shopping</a>
    <div class="clearfix">
    </div> 
    </div>
      <div class="card-body">
        <% @order.shopping_carts.includes(:product).each do |item| %>
          <div class="row">
            <div class="col-xs-2 col-md-2">
            <%= link_to (product_path(item.product)) do %>
              <img class="img-responsive" src="<%= item.product.photo%>" alt="prewiew">
              <% end %>
              </div>
                <div class="col-xs-4 col-md-6">
                  <h4 class="product-name"><strong><%= item.product.name %></strong></h4><h4><small>
                  <%= item.product.descriptions %></small></h4>
                  </div>
                      <div class="col-xs-6 col-md-4 row">
                        <div class="col-xs-6 col-md-6 text-right" style="padding-top: 5px">
                        <h3>$<strong><%= item.product.price%> 
                        <span class="text-muted h2">x</span></strong></h6>
                      </div>
                        <div class="col-xs-4 col-md-4 h3">
                      <%= item.quantity %>
                      <%= link_to shopping_cart_path(item), method: :delete, data: { confirm: 'Â¿Estas seguro?' } do %>
                      <i class="fas fa-trash-alt"></i> 
                      <% end %>
                        </div>
                      <div class="col-xs-2 col-md-2">
                  </div> 
          </div>
        </div>
    </div>
        <hr> <% end %>
    </div>
      <div class="card-footer">
        <div class="pull-right" style="margin: 5px">Total: $<%= @order.total%> 
          <a href="#" class="btn btn-success pull-right">Pagar</a> 
        </div> 
    </div>